<h1>List of all tasks</h1>

<ul class="tasks"><% @tasks.each do |task| %>
    <li>
      <div class=task>
        <p><% if task.completed %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <%= link_to task.title, show_path(task) %>
        <button class="btn btn-dark"><%= link_to "Delete", delete_task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></button>
      </p>
      </div>
    </li>
  <% end %>
</ul>

<br>

<i class="fas fa-plus"></i><%= link_to "Add a new task", tasks_new_path %>

